{
  "name": "erest",
  "version": "0.5.0",
  "description": "Easy to build api server depend on express.",
  "main": "dist/lib/index.js",
  "typing": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "test": "npm run compile && jest",
    "tag": "git tag v`node -p 'require(\"./package\").version'`",
    "lint": "prettier --no-config --write src/**/*.ts && tslint --project tsconfig.json --fix",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc && prettier --no-config --write dist/**/*.js",
    "prepublishOnly": "npm run lint && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourtion/node-erest.git"
  },
  "keywords": [
    "rest",
    "api",
    "express",
    "api-doc"
  ],
  "author": "Yourtion Guo <yourtion@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourtion/node-erest/issues"
  },
  "homepage": "https://github.com/yourtion/node-erest#readme",
  "dependencies": {
    "debug": "^3.0.0",
    "path-to-regexp": "^2.1.0",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/debug": "0.0.30",
    "@types/jest": "^22.0.1",
    "@types/node": "^8.0.41",
    "@types/supertest": "^2.0.3",
    "@types/validator": "^6.3.0",
    "jest": "^22.1.4",
    "prettier": "^1.10.2",
    "source-map-support": "^0.4.15",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
